{
  "extends": ["stylelint-config-standard"],
  "plugins": ["stylelint-order"],
  "rules": {
    "indentation": 2,
    "string-quotes": "double",
    "color-hex-case": "lower",
    "block-no-empty": true,
    "selector-class-pattern": "^[a-z0-9\\-]+$",
    "order/order": ["custom-properties", "declarations"]
  }
}
